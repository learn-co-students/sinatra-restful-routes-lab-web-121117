<form method="post" action="/recipes/<%= @recipe.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
  Recipe Name: <input type="text" name="name" value = <%= @recipe.name %>/>
  Recipe Ingredients: <input type="text" name="ingredients" value = <%= @recipe.ingredients %> />
  Recipe Cook Time: <input type="text" name="cook_time" value = <%= @recipe.cook_time %> />
  <input type="submit" value="submit"  />
</form>
