<p>Edit Recipe</p>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <p>Name: </p>
  <p><input type="text" name="name" value="<%= @recipe.name %>"></p>
  <p>Ingredients: </p>
  <p><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></p>
  <p>Cook Time: </p>
  <p><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></p>
  <input type="submit" value="submit">
  <input id="hidden" type="hidden" name="_method" value="patch">
</form>